{
	"name": "@nvisy/runtime",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"workspaces": [
		"packages/nvisy-core",
		"packages/nvisy-connect",
		"packages/nvisy-langchain",
		"packages/nvisy-process",
		"packages/nvisy-graph",
		"packages/nvisy-server",
		"packages/nvisy-cli"
	],
	"scripts": {
		"build": "npm run build --workspaces",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"typecheck": "npm run typecheck --workspaces",
		"clean": "npm run clean --workspaces && rimraf node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.0.0",
		"@types/node": "^22.0.0",
		"@vitest/coverage-v8": "^3.0.0",
		"rimraf": "^6.0.0",
		"tsup": "^8.0.0",
		"typescript": "^5.7.0",
		"vitest": "^3.0.0"
	}
}
