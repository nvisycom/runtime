{
	"name": "@nvisy/server",
	"version": "0.1.0",
	"description": "HTTP server for exposing Nvisy workflows as API endpoints",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"build:watch": "tsup --watch",
		"clean": "rimraf dist",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@nvisy/core": "*",
		"@nvisy/graph": "*",
		"@hono/node-server": "^1.13.0",
		"hono": "^4.0.0"
	},
	"engines": {
		"node": ">=22.0.0"
	}
}
