{
	"name": "@nvisy/core",
	"version": "0.1.0",
	"description": "Core data types, errors, and utilities for the Nvisy runtime",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"imports": {
		"#data/*.js": "./src/data/*.ts",
		"#errors/*.js": "./src/errors/*.ts",
		"#utils/*.js": "./src/utils/*.ts"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"build:watch": "tsup --watch",
		"clean": "rimraf dist",
		"typecheck": "tsc --noEmit"
	},
	"engines": {
		"node": ">=22.0.0"
	}
}
